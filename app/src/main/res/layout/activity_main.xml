<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

  <TextView
      android:id="@+id/pin_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enter current pin"
      android:textSize="26sp"
      android:textColor="@android:color/black"
      android:layout_gravity="center"
      android:layout_margin="20dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>

  <co.djurayev.pincodeview.pincode.PinCodeView
      android:id="@+id/pin_code_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_below="@+id/pin_title"
      android:layout_centerHorizontal="true"/>

  <co.djurayev.pincodeview.keyboard.KeyboardContainer
      android:id="@+id/keyboard_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"/>

</RelativeLayout>